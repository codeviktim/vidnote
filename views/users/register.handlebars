<div class="ui centered grid">
  <div class="six wide tablet eight wide computer column">
    <form method="POST" action="/api/users/register" class="ui form segment">
      <div><i class="ui center aligned huge  vimeo icon"></i></div>
      <h1 class="ui center aligned header">Account Register</h1>
      <div class="field">
        <label>Username</label>
        <div class="ui left icon input">
          <input type="text" placeholder="username" name="username" value="{{username}}" required>
          <i class="users icon"></i>
        </div>
      </div>
      <div class="field">
        <label>Email</label>
        <div class="ui left icon input">
          <input type="text" placeholder="Email" name="email" value="{{email}}" required>
          <i class="at icon"></i>
        </div>
      </div>
      <div class="field">
        <label>Password</label>
        <div class="ui left icon input">
          <input type="password" placeholder="Password" name="password" value="{{password}}" required>
          <i class="privacy icon"></i>
        </div>
      </div>
      <div class="field">
        <label>Confirm Password</label>
        <div class="ui left icon input">
          <input type="password" placeholder="username" name="password2" value="{{password2}}" required>
          <i class="privacy icon"></i>
        </div>
      </div>
      <button class="ui fluid violet button" type="submit">Submit</button>
    </form>
  </div>
</div>